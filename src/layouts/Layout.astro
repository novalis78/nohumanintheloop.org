---
import '../styles/global.css'

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "No Human in the Loop: Cybersecurity in the Autonomous AI Age | Lennart Lopin",
  description = "88% of enterprises experienced AI agent security incidents. Only 6% have defenses. The most popular AI agent framework scored 2 out of 100 for security. The definitive guide to autonomous AI cybersecurity, by Lennart Lopin (CISSP, CCSP, CSSLP). Available on Amazon."
} = Astro.props;

const canonicalUrl = "https://www.nohumanintheloop.org";
const ogImage = "https://www.nohumanintheloop.org/og-image.jpg";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="author" content="Lennart Lopin" />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1" />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Keywords -->
    <meta name="keywords" content="AI cybersecurity, autonomous AI agents, AI security book, prompt injection, zero trust AI, AI threat landscape, machine identity, cybersecurity 2026, Lennart Lopin, CISSP, AI agent security, LLM security, AI governance, autonomous systems security, agentic AI risks, AI firewall, OWASP LLM, AI compliance, deepfake attacks, quantum cybersecurity" />

    <!-- Open Graph -->
    <meta property="og:title" content="No Human in the Loop: Cybersecurity in the Autonomous AI Age" />
    <meta property="og:description" content="$50,469 in attacker costs. $18 million in damages. 195:1 ROI. The autonomous AI security crisis is here. 533 pages of documented incidents, defensive architectures, and the roadmap CISOs need before the inevitable breach." />
    <meta property="og:type" content="book" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="No Human in the Loop" />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="800" />
    <meta property="og:image:height" content="1200" />
    <meta property="og:image:alt" content="No Human in the Loop book cover - a meditating figure in golden circuit patterns against a dark digital matrix" />
    <meta property="og:locale" content="en_US" />
    <meta property="book:author" content="Lennart Lopin" />
    <meta property="book:isbn" content="979-8-2469-7207-6" />
    <meta property="book:release_date" content="2026-02-01" />
    <meta property="book:tag" content="cybersecurity" />
    <meta property="book:tag" content="artificial intelligence" />
    <meta property="book:tag" content="autonomous agents" />
    <meta property="book:tag" content="AI security" />
    <meta property="book:tag" content="prompt injection" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="No Human in the Loop: Cybersecurity in the Autonomous AI Age" />
    <meta name="twitter:description" content="$50,469 in attacker costs. $18 million in damages. 195:1 ROI. The autonomous AI security crisis is here. By Lennart Lopin (CISSP, CCSP, CSSLP)." />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:image:alt" content="No Human in the Loop book cover" />

    <!-- Structured Data: Book -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Book",
      "name": "No Human in the Loop: Cybersecurity in the Autonomous AI Age",
      "alternateName": "No Human in the Loop",
      "author": {
        "@type": "Person",
        "name": "Lennart Lopin",
        "jobTitle": "CTO & Co-founder, Byte Federal",
        "url": "https://www.nohumanintheloop.org",
        "sameAs": [],
        "hasCredential": [
          { "@type": "EducationalOccupationalCredential", "credentialCategory": "Professional Certification", "name": "CISSP" },
          { "@type": "EducationalOccupationalCredential", "credentialCategory": "Professional Certification", "name": "CCSP" },
          { "@type": "EducationalOccupationalCredential", "credentialCategory": "Professional Certification", "name": "CSSLP" }
        ]
      },
      "isbn": "979-8-2469-7207-6",
      "bookFormat": ["https://schema.org/Hardcover", "https://schema.org/Paperback", "https://schema.org/EBook"],
      "numberOfPages": 533,
      "datePublished": "2026-02",
      "bookEdition": "First Edition",
      "inLanguage": "en",
      "image": ogImage,
      "url": "https://www.nohumanintheloop.org",
      "genre": ["Cybersecurity", "Artificial Intelligence", "Technology", "Computer Security"],
      "about": [
        { "@type": "Thing", "name": "Autonomous AI Agents" },
        { "@type": "Thing", "name": "Cybersecurity" },
        { "@type": "Thing", "name": "Prompt Injection" },
        { "@type": "Thing", "name": "Zero Trust Architecture" },
        { "@type": "Thing", "name": "AI Governance" },
        { "@type": "Thing", "name": "Quantum Computing Threats" },
        { "@type": "Thing", "name": "Machine Identity Management" }
      ],
      "keywords": "AI cybersecurity, autonomous agents, prompt injection, zero trust, AI governance, machine identity, OWASP LLM, deepfake attacks, quantum cryptography, agentic AI",
      "description": "The definitive guide to cybersecurity when autonomous AI agents operate at scale. 88% of enterprises experienced AI agent security incidents, yet only 6% have deployed advanced defenses. Based on documented incidents from 2025-2026, this book provides the tactical roadmap for zero trust agent architectures, AI firewalls, and the 90-day implementation plan CISOs need before the inevitable breach.",
      "offers": [
        {
          "@type": "Offer",
          "url": "https://www.amazon.com/dp/B0GM7S1HYD",
          "availability": "https://schema.org/InStock",
          "priceCurrency": "USD",
          "seller": { "@type": "Organization", "name": "Amazon" }
        }
      ]
    })} />

    <!-- Structured Data: FAQPage (helps with rich snippets) -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "What is No Human in the Loop about?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "No Human in the Loop is a comprehensive guide to cybersecurity in the age of autonomous AI agents. It covers the expanded attack surface when AI systems operate without human oversight, documented attack patterns from 2025-2026, defensive architectures including zero trust for agents and AI firewalls, and organizational readiness frameworks. The book is based on real incidents, not hypothetical scenarios."
          }
        },
        {
          "@type": "Question",
          "name": "Who is the author Lennart Lopin?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Lennart Lopin is CTO and Co-founder of Byte Federal, one of America's largest Bitcoin ATM networks. He holds CISSP, CCSP, and CSSLP certifications, led ISO 27001 certification, and has an M.A. in Computational Linguistics and AI. He manages over 1,300 machines across 42 states and deploys autonomous agents that trade real capital."
          }
        },
        {
          "@type": "Question",
          "name": "What formats is No Human in the Loop available in?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "No Human in the Loop is available in three formats: Kindle eBook, paperback (ISBN 979-8-2469-7207-6), and hardcover (ISBN 979-8-2468-9369-2). All formats are available on Amazon."
          }
        },
        {
          "@type": "Question",
          "name": "Why is AI agent security important in 2026?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "88% of enterprises experienced AI agent security incidents in the twelve months preceding February 2026, yet only 6% have deployed advanced AI security strategies. The most popular open-source AI agent framework scored 2 out of 100 for security. An estimated 1.5 million AI agents operate without security oversight, and documented attacks show adversaries achieving 195:1 return on investment against defended organizations."
          }
        }
      ]
    })} />

    <!-- Structured Data: WebPage + BreadcrumbList -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebPage",
      "name": "No Human in the Loop - Official Book Website",
      "description": description,
      "url": canonicalUrl,
      "mainEntity": {
        "@type": "Book",
        "name": "No Human in the Loop: Cybersecurity in the Autonomous AI Age"
      },
      "breadcrumb": {
        "@type": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": canonicalUrl
          }
        ]
      },
      "speakable": {
        "@type": "SpeakableSpecification",
        "cssSelector": ["h1", "h2", ".pull-quote"]
      }
    })} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Instrument+Serif:ital@0;1&family=Inter:wght@300;400;500;600;700;800;900&family=JetBrains+Mono:wght@400;500;700&display=swap" rel="stylesheet" />

    <title>{title}</title>
  </head>
  <body class="bg-void text-bone antialiased overflow-x-hidden">
    <slot />
  </body>
</html>
